<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundapp"
    tools:context=".EditHapusStockActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="70dp"
            android:src="@drawable/logoestore"
            android:layout_marginTop="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tambah Data Stock"
            android:textColor="#B30707"
            android:textStyle="bold"
            android:textSize="25sp"
            android:layout_marginTop="10dp"/>

        <EditText
            android:id="@+id/edt_nama_barang_edit"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginRight="25dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"
            android:hint="Nama Barang"
            android:inputType="text"
            android:textColor="#B30707"/>

        <EditText
            android:id="@+id/edt_harga_barang_edit"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginRight="25dp"
            android:layout_marginLeft="25dp"
            android:layout_marginBottom="10dp"
            android:hint="Harga Barang"
            android:inputType="number"
            android:textColor="#B30707"/>

        <EditText
            android:id="@+id/edt_ukuran_barang_edit"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginRight="25dp"
            android:layout_marginLeft="25dp"
            android:layout_marginBottom="10dp"
            android:hint="Ukuran Barang"
            android:inputType="text"
            android:textColor="#B30707"/>


            <ImageView
                android:id="@+id/img_barang_edit"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/logoestore"/>

            <Button
                android:id="@+id/btn_pilih_gambar_edit"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:background="@drawable/button_background"
                android:layout_toRightOf="@+id/img_barang_edit"
                android:layout_marginTop="25dp"
                android:text="PILIH GAMBAR"
                android:textColor="#fff"
                android:visibility="gone"/>

        <Button
            android:id="@+id/btn_edit_stock"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginRight="25dp"
            android:layout_marginLeft="25dp"
            android:background="@drawable/button_background"
            android:text="Edit Stock"
            android:layout_marginTop="15dp"
            android:textColor="#fff"/>

        <Button
            android:id="@+id/btn_hapus_stock"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginRight="25dp"
            android:layout_marginLeft="25dp"
            android:background="@drawable/button_background"
            android:text="Hapus Stock"
            android:textColor="#fff"
            android:layout_marginTop="15dp"/>

    </LinearLayout>

</ScrollView>