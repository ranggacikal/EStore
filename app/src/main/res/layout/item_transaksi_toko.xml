<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="6dp"
    app:cardElevation="7dp"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="10dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ID Transaksi "
            android:textColor="#B30707"
            android:textSize="10sp"
            android:layout_marginLeft="5dp"/>

        <TextView
            android:id="@+id/text_id_transaksi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ID xxxx"
            android:textColor="#B30707"
            android:textStyle="bold"
            android:textSize="10sp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="5dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="5dp">

            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginRight="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="List Pesanan"
                    android:textColor="#B30707"
                    android:textSize="10sp"/>

                <TextView
                    android:id="@+id/text_list_transaksi"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="LIST"
                    android:textColor="#B30707"
                    android:textStyle="bold"
                    android:layout_marginTop="15dp"
                    android:textSize="10sp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginRight="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Harga"
                    android:textColor="#B30707"
                    android:textSize="10sp"/>

                <TextView
                    android:id="@+id/text_total_transaksi"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="Rp. 000.000"
                    android:textColor="#B30707"
                    android:textStyle="bold"
                    android:layout_marginTop="15dp"
                    android:textSize="10sp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginRight="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Status Transaksi"
                    android:textColor="#B30707"
                    android:textSize="10sp"/>

                <TextView
                    android:id="@+id/text_status_transaksi"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="Belum Selesai"
                    android:textColor="#B30707"
                    android:textStyle="bold"
                    android:layout_marginTop="15dp"
                    android:textSize="10sp"
                    android:layout_gravity="center"/>

            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/metode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tanggal Transaksi : "
                android:textColor="#B30707"
                android:textSize="10sp"
                android:layout_marginRight="10dp"/>

            <TextView
                android:id="@+id/text_tanggal_transaksi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00 Apr 2020"
                android:layout_toRightOf="@+id/metode"
                android:textColor="#B30707"
                android:textStyle="bold"
                android:textSize="10sp"
                android:layout_gravity="center"/>

        </RelativeLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>